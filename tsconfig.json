{
  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "types": ["node", "chrome"],
    "jsx": "react-jsx",
    "paths": {
      "runtime/*": ["src/runtime/*"],
      "shared/*": ["src/shared/*"]
    },
    "strict": false
  }
}
